# Guardião — Exemplo de .env (sanitizado)
# Substitua pelos seus valores reais (NUNCA commit os reais).

# OpenAI / Modelos
OPENAI_API_KEY=your-openai-api-key-here
ASSISTANT_ID=your-assistant-id-here
API_OPENAI_SERV=your-openai-service-key-here
API_OPEN_CODEX_SERV=your-openai-codex-service-key-here
API_OPNA=your-openai-project-key-here

# Observabilidade / Erros
SENTRY_DSN=your-sentry-dsn-here
API_SENTRY=your-sentry-api-token-here

# Billing / Pagamentos
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# Integrações
COHERE_SERV=your-cohere-service-key-here
COHERE=your-cohere-api-key-here
HUGGING_FACE_TOKEN=your-hf-token-here
NOTION_TOKEN=your-notion-token-here
GITHUB_PAT=your-github-personal-access-token-here
GOOGLE_API_KEY=your-google-api-key-here

# Infra / Automação
TOKEN_AUTOMACAO_NPM=your-npm-automation-token-here
TOKEN_NPM=your-npm-token-here
TOKEN_API_TERRAFORM=your-terraform-cloud-token-here

# Servidor
PORT=8787
CORS_ORIGIN=https://your-allowed-origin.example
FRAME_ANCESTORS=https://your-allowed-ancestor.example
LOG_LEVEL=info
NODE_ENV=production

# Rate limiting (por minuto, por IP)
API_RATE=100
RUN_RATE=20
STREAM_RATE=30
MSG_RATE=60
API_WINDOW_MS=60000
RUN_WINDOW_MS=60000
STREAM_WINDOW_MS=60000
MSG_WINDOW_MS=60000

# Utilitário
URL=http://localhost:8787/
